<!--左上の個人データ-->

<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
  <tr>
    <th>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー解除', user_followers_path(user), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'フォローする',  user_followers_path(user), method: :post, class: 'btn btn-primary' %>
      <% end %>
    </th>
    <th>
      <% if current_user.following?(user) %>
        <%= link_to 'メッセージ', direct_messages_path(receiver_id: user.id), class: 'btn btn-success' %>
      <% else %>
        <%= link_to 'フォローしてDM', user_followers_path(user), method: :post, class: 'btn btn-secondary' %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>